<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/iv_check"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/common_checkbox_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:padding="5dp"
        android:background="@drawable/selector_btn_ng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_avator"
            android:background="@drawable/img_default_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_date"
            android:text="年月日"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tv_address"
            android:text="号码"
            android:textSize="18sp"
            android:layout_toRightOf="@id/iv_avator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/tv_date"
            />
        <TextView
        android:id="@+id/tv_body"
        android:text="sdfsdfsdfsdsdfsdfsdfdfsdfsdf"
        android:textSize="18sp"
        android:layout_toRightOf="@id/iv_avator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        />

    </RelativeLayout>

</LinearLayout>